# FisioNet Frontend Environment Variables

# API URLs for backend services
REACT_APP_API_URL=http://localhost:3001
REACT_APP_EXERCISE_API_URL=http://localhost:3002
REACT_APP_APPOINTMENT_API_URL=http://localhost:3003
REACT_APP_FORUM_API_URL=http://localhost:3004
REACT_APP_CHAT_API_URL=http://localhost:3005

# App Configuration
REACT_APP_NAME=FisioNet
REACT_APP_VERSION=1.0.0

# Feature Flags
REACT_APP_ENABLE_CHAT=true
REACT_APP_ENABLE_FORUM=true
REACT_APP_ENABLE_NOTIFICATIONS=true

# File Upload Settings
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# External Service URLs (if needed)
REACT_APP_YOUTUBE_API_KEY=your-youtube-api-key-here
REACT_APP_GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here